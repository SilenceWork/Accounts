<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <yjy.com.accounts.function.widget.DateRangeSelectionView
        android:id="@+id/drsv_date_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/app_widget_size_45dp"/>
    <!--金额范围-->
    <yjy.com.accounts.function.widget.MoneyRangeSelectionView
        android:id="@+id/mrsv_money_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/app_widget_size_45dp"/>

    <!--支付方式-->
    <yjy.com.accounts.function.widget.KeywordSelectionView
        android:id="@+id/ksv_pay_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/app_widget_size_45dp"/>

    <!--花费用途-->
    <yjy.com.accounts.function.widget.KeywordSelectionView
        android:id="@+id/ksv_cost_way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/app_widget_size_45dp"/>

    <de.codecrafters.tableview.TableView
        android:id="@+id/tv_cost_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>