<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Wheel">
        <attr name="ticks" format="integer"/>
        <attr name="numRotations" format="integer"/>
    </declare-styleable>

    <declare-styleable name="WheelRadio">
        <attr name="smallTicks" format="integer"/>
        <attr name="bigTicks" format="integer"/>
        <attr name="valueIndicatorColor" format="color|reference"/>
        <attr name="bigIndicatorColor" format="color|reference"/>
        <attr name="smallIndicatorColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="android:gravity"/>
    </declare-styleable>
    <declare-styleable name="FlowLayout_Layout">
        <attr name="android:layout_gravity"/>
    </declare-styleable>
</resources>